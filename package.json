{
  "name": "jsonrpc-lib",
  "version": "0.1.0",
  "description": "JSON-RPC 2.0 parser and serializer nodejs module",
  "main": "dist/jsonrpc.ts",
  "types": "dist/jsonrpc.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "build": "npm run format && npm run lint && tsc",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "doc": "typedoc --out doc src/jsonrpc.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lampajr/jsonrpc-lib.git"
  },
  "keywords": [
    "JSON",
    "JSON-RPC",
    "jsonrpc2",
    "parser",
    "serializer"
  ],
  "author": "Andrea Lamparelli",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/lampajr/jsonrpc-lib/issues"
  },
  "homepage": "https://github.com/lampajr/jsonrpc-lib#readme",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.2"
  },
  "files": [
    "dist/jsonrpc.d.ts",
    "dist/jsonrpc.js",
    "dist/jsonrpc.js.map",
    "README.md"
  ]
}
